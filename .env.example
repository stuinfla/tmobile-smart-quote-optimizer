# T-Mobile Sales Edge Environment Variables
# Copy this file to .env.local and fill in your values

# Admin Configuration
VITE_ADMIN_PASSWORD=your_secure_password_here

# API Keys for PDF Vision Processing
# Get your Anthropic API key from: https://console.anthropic.com/
VITE_ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: OpenAI API key for fallback OCR
# Get your OpenAI API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-key-here

# Feature Flags
VITE_ENABLE_PDF_READER=true
VITE_ENABLE_VISION_API=true

# Environment
VITE_ENVIRONMENT=development

# API Endpoints (if using backend services)
VITE_API_BASE_URL=http://localhost:3000/api

# Analytics (optional)
VITE_GA_TRACKING_ID=
VITE_MIXPANEL_TOKEN=